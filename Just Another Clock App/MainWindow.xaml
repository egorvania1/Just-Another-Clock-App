<Window x:Class="Just_Another_Clock_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Just_Another_Clock_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="300">
    <Grid>
        <TabControl>
            <TabItem Header="Часы">
                <TextBox>Clock</TextBox>
            </TabItem>
            <TabItem Header="Таймер">
                <TextBox>Timer</TextBox>
            </TabItem>
            <TabItem Header="Секундомер">
                <TextBox>Stopwatch</TextBox>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
